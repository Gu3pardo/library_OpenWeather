<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lib_current_weather_image"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:contentDescription="@string/contentDescription" />

            <TextView
                android:id="@+id/lib_current_weather_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lib_current_weather_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lib_current_weather_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lib_current_weather_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/lib_current_weather_reload"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|end"
                android:background="@xml/circle_blue"
                android:contentDescription="@string/contentDescription"
                android:padding="1dp"
                android:src="@android:drawable/stat_notify_sync" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>