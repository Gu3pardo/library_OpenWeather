<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/White"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/nitrogen_dioxide" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen Dioxide"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lib_nitrogen_dioxide_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen Dioxide Coordinates" />

            <TextView
                android:id="@+id/lib_nitrogen_dioxide_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen Dioxide Datetime" />

            <TextView
                android:id="@+id/lib_nitrogen_dioxide_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen Dioxide Value" />

            <TextView
                android:id="@+id/lib_nitrogen_dioxide_strat_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen Dioxide Strat Value" />

            <TextView
                android:id="@+id/lib_nitrogen_dioxide_trop_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nitrogen Dioxide Trop Value" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>