<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/uv_index" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UV Index"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lib_uv_index_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UV Index Value" />

            <TextView
                android:id="@+id/lib_uv_index_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UV Index Coordinates" />

            <ImageButton
                android:id="@+id/lib_uv_index_reload"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|end"
                android:background="@xml/circle_blue"
                android:contentDescription="@string/contentDescription"
                android:padding="1dp"
                android:src="@android:drawable/stat_notify_sync" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>